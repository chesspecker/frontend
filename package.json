{
	"name": "chesspecker",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"postbuild": "next-sitemap",
		"start": "next start",
		"clean": "rm -rf .next/*",
		"lint": "xo --fix",
		"xo": "xo"
	},
	"prettier": "prettier-config-xo",
	"xo": {
		"prettier": true,
		"extends": [
			"xo-nextjs",
			"plugin:@next/next/recommended"
		],
		"env": "browser",
		"ignores": [
			".github"
		],
		"rules": {
			"node/prefer-global/process": "off",
			"react/prop-types": "off",
			"react/button-has-type": "warn",
			"unicorn/filename-case": "off",
			"unicorn/no-abusive-eslint-disable": "warn"
		}
	},
	"dependencies": {
		"@tippyjs/react": "^4.2.6",
		"axios": "^0.22.0",
		"next": "11.1.2",
		"react": "17.0.2",
		"react-chessground": "^1.5.0",
		"react-confetti": "^6.0.1",
		"react-dom": "17.0.2",
		"react-icons": "^4.3.1",
		"react-input-slider": "^6.0.1",
		"sass": "^1.42.1",
		"use-sound": "^4.0.1"
	},
	"devDependencies": {
		"eslint-config-xo-nextjs": "^4.0.2",
		"next-sitemap": "^1.6.203",
		"prettier": "^2.4.1",
		"prettier-config-xo": "^2.0.0",
		"xo": "^0.45.0"
	}
}
