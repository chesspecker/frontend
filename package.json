{
	"name": "chesspecker",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"test": "prettier '**/*.{css,html,js,json,jsx,md,sass,scss,ts,tsx,vue,yaml,yml}' --check & xo",
		"lint": "prettier '**/*.{css,html,js,json,jsx,md,sass,scss,ts,tsx,vue,yaml,yml}' --write & xo --fix"
	},
	"prettier": "prettier-config-xo",
	"xo": {
		"prettier": true,
		"extends": "xo-nextjs",
		"env": "browser",
		"rules": {
			"node/prefer-global/process": "off",
			"react/prop-types": "off",
			"react/button-has-type": "warn",
			"unicorn/filename-case": "off",
			"unicorn/no-abusive-eslint-disable": "warn"
		}
	},
	"dependencies": {
		"axios": "^0.22.0",
		"help-array": "^1.1.1",
		"next": "11.1.2",
		"prop-types": "^15.7.2",
		"react": "17.0.2",
		"react-chessground": "^1.5.0",
		"react-confetti": "^6.0.1",
		"react-dom": "17.0.2",
		"react-icons": "^4.3.1",
		"react-input-slider": "^6.0.1",
		"sass": "^1.42.1",
		"socket.io-client": "^4.2.0",
		"use-sound": "^4.0.1"
	},
	"devDependencies": {
		"eslint-config-xo-nextjs": "^4.0.2",
		"file-loader": "^6.2.0",
		"prettier": "^2.4.1",
		"prettier-config-xo": "^2.0.0",
		"xo": "^0.45.0"
	}
}
